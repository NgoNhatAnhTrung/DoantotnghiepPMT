<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebDangKySuDungPhongMay</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Trang dành cho giảng viên</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @User.FindFirst("DisplayName")?.Value
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ChangePassword">Đổi mật khẩu</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Logout">Đăng xuất</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Home
                </a>
            </li>
            <li class="nav-item  text-white">
                <a class="nav-link" asp-area="" asp-controller="GiangVienHome" asp-action="Index">
                    <i class="fas fa-chalkboard-teacher"></i> Lớp học phần
                </a>
            </li>
            <li class="nav-item  text-white">
                <a class="nav-link" asp-area="" asp-controller="GiangVienHome" asp-action="History">
                    <i class="fas fa-history"></i> Lịch sử đăng ký
                </a>
            </li>
            <li class="nav-item  text-white">
                <a class="nav-link" asp-area="" asp-controller="GiangVienHome" asp-action="Notification">
                    <i class="fas fa-bell"></i> Thông báo
                </a>
            </li>
            <!-- Add other navigation items here -->
        </ul>
    </div>

    <main role="main" class="main-content">
     

        <div class="pt-3 px-3">
            @RenderBody()
        </div>
      
    </main>

    <footer class="d-flex flex-column flex-md-row text-center text-md-center justify-content-center py-4 xl-5 bg-primary">
        <!-- Copyright -->
        <div class="text-white mb-3 mb-md-0">
            Copyright © 2024, Trường Đại Học Sư Phạm Kỹ Thuật - Đà Nẵng

        </div>

    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
