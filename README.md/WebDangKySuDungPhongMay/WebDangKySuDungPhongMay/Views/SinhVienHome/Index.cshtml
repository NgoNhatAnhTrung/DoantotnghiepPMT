@model IEnumerable<WebDangKySuDungPhongMay.Models.PhieuDangKySV>

@{
    ViewBag.Title = "Lịch sử đăng ký";
    Layout = "~/Views/Shared/_SinhVienLayout.cshtml";
}

<h1 class="text-center text-uppercase">Lịch sử đăng ký</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ngày sử dụng</th>
            <th>Thời gian bắt đầu</th>
            <th>Thời gian kết thúc</th>
            <th>Lý do</th>
            <th>Ghi chú</th>
            <th>Phòng máy</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phieu in Model)
        {
            <tr>
                <td>@phieu.NgaySuDung.ToShortDateString()</td>
                <td>@phieu.ThoiGianBatDau</td>
                <td>@phieu.ThoiGianKetThuc</td>
                <td>@phieu.LyDo</td>
                <td>@phieu.GhiChu</td>
                <td>@phieu.PhongMay.MaPhongMay</td>
                <td>@(phieu.TrangThai ? "Đã duyệt" : "Chưa duyệt")</td>
            </tr>
        }
    </tbody>
</table>
